# VeriFi Auth Environment Variables

# Database (Supabase/Postgres)
DATABASE_URL="postgresql://user:password@host:5432/database?schema=public&pgbouncer=true"
DIRECT_URL="postgresql://user:password@host:5432/database?schema=public"

# JWT/JWE Secret (CRITICAL: Must be 32+ characters for AES-256-GCM)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-in-production-must-be-32-bytes-minimum

# Session Configuration
SESSION_MAX_AGE=86400  # 24 hours in seconds

# App Configuration
NEXT_PUBLIC_APP_DOMAIN=localhost:3100
NEXT_PUBLIC_APP_URL=http://localhost:3100

# Aptos Network
NEXT_PUBLIC_NETWORK=testnet
